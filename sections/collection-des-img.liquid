<style media="screen">
  .fb-col{
    padding-left: 0px;
    padding-right: 0px;
  }
  .fb-col img:hover{
    opacity: 1.0;
    filter: alpha(opacity=100); /* For IE8 and earlier */

  }
  .fb-col:hover >.fbimglogo{
    visibility: visible;
  }
  .featured-block img{

  }
  .fbimgsec{
     position: relative;
  }
  .fbimglogo{
     position: absolute;
     top: 20%;
     left:30%;
     visibility: hidden;
  }
  .caption1{
    position: absolute;
    visibility: hidden;
    background-color: white;
    bottom: 0%;
    padding: 10px;
  }
  .fb-col:hover >.caption1{
    visibility: visible;
  }
  .fb-col:hover >.fbimgsec{

  }
  .title-block{
    /* background-color: #f9fafb; */
    float: left;
width: 50%;
background: #f9fafb;
padding: 40px;
position: relative;
top: 30px;
  }
  .featured-block{
    float: left;
width: 100%;
background: #f9fafb;
margin: 55px 0 0;
  }
  .featured-block:hover > .featured-content {
  opacity: 0.2 ;
  }
  .featured-block:hover > .featured-content:hover {
  opacity: 1.0;
}

</style>
<div class="container-fluid featured-block">

<div class="col-md-6 col-xs-3 title-block"><h1>BabyLove <br>{{section.settings.title}}</h1></div>
{% for block in section.blocks %}
  <div class="featured-content">
  <div class="col-md-3 col-xs-3 fb-col" id="fb-col" {{ block.shopify_attributes }}>
      <img class="fbimgsec" style="width:100%;" src="{{ block.settings.feature_img | img_url : '480x480'  }}">
        <img  class="fbimglogo" src="{{ block.settings.block_imglogo | img_url : '100x100'  }}">
        <div class="caption1">
          <h4>{{block.settings.blocktitle}}</h4>
          <p class="text-justified text-center">{{block.settings.blockdescription}}</p>
        </div>

  </div>
  </div>

{% endfor %}
</div>

{% schema %}
  {
    "name": "collection img",
    "max_blocks": 6,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Baby Love"
      }
    ],
    "blocks": [
      {
        "type": "image_picker",
        "name": "fbimg",
        "settings": [
          {
            "label": "feature image",
            "id": "feature_img",
            "type": "image_picker"
          },
          {
            "label": "logo image",
            "id": "block_imglogo",
            "type": "image_picker"
          },
          {
            "label": "block-title",
            "id": "blocktitle",
            "type": "text"
          },
          {
            "label": "block-description",
            "id": "blockdescription",
            "type": "text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "collection_block",
        "category": "collection",
        "blocks": [
          {
            "type": "image_picker"
          },
          {
            "type": "image_picker"
          }
        ]
      }
    ]
  }
{% endschema %}
